- var menus = [{text: 'About Us', link: '#'}, {text: 'What we do',link:"#",submenu: [{text: 'Item 1 ', link: '#'}, {text: 'Item 2', link: '#',submenu: [{text: 'Item A', link: '#'}, {text: 'Item B', link: '#'}, {text: 'Item C', link: '#'}, {text: 'Item D', link: '#'}]}, {text: 'Item 3', link: '#'}, {text: 'Item 4', link: '#'}, {text: 'Item 5', link: '#'}] }, {text: 'Industry Trends', link:"#"}, {text: 'Insights', link: '#'},{text: 'Consultations', link: '#'},{text: 'Contact', link: 'contact.html'}];


#menu-mobile(style="display:none")
	ul
		each value,key in menus
			if value.submenu
				li.menu-item
					a(href=value.link)= value.text
					ul.sub-menu
						each subvalue in value.submenu
							li.menu-item
								a(href=subvalue.link)= subvalue.text
								if subvalue.submenu
									ul.sub-menu
										each subvalue1 in subvalue.submenu
											li.menu-item
												a(href=subvalue1.link)= subvalue1.text
			else
				li.menu-item
					if selected === value.link
						a.current(href=value.link)= value.text
					else
						a(href=value.link)= value.text